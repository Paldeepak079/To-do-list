{
    "manifest_version": 3,
    "name": "To-Do List by Deepak",
    "version": "1.0",
    "description": "A simple to-do list Chrome extension.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "windows", "tabs"]
  }